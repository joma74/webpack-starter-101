{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [{
            "type": "firefox",
            "request": "attach",
            "name": "Attach Karma Firefox",
            "showConsoleCallLocation": false,
            "port": 9222,
            "pathMappings": [
                    { "url": "webpack:///", "path": "${workspaceRoot}/" },
                    { "url": "http://localhost:9876", "path": "${workspaceRoot}/node_modules/karma/static" }
                ]
                /** 
                    ,"log": {
                    "consoleLevel": {
                        "PathConversion": "Debug",
                        "default": "Error"
                    }
                }
                */
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach Karma Chrome",
            "address": "localhost",
            "port": 9333,
            "pathMapping": {
                "/": "${workspaceRoot}/",
                "/base/": "${workspaceRoot}/"
            }
        }
    ]
}