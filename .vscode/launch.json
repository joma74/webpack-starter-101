    "version": "0.2.0",
    "configurations": [{
            "type": "firefox",
            "request": "attach",
            "name": "Attach Karma Firefox",
            "port": 9222,
            "pathMappings": [{ "url": "webpack:///", "path": "${workspaceRoot}/" }]
            /** 
                ,"log": {
                "consoleLevel": {
                    "PathConversion": "Debug",
                    "default": "Error"
                }
            }
            */
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach Karma Chrome",
            "address": "localhost",
            "port": 9333,
            "pathMapping": {
                "/": "${workspaceRoot}/",
                "/base/": "${workspaceRoot}/"
            }
        }
    ]
}