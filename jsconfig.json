{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "checkJs": true,
        "moduleResolution": "node",
        "strict": true,
        "rootDirs": [
            "build-utils", "src/main"
        ],
        "baseUrl": "./",
        "outDir": "./target/",
        "paths": {
            "*": ["*"],
            "js@/*": ["src/main/js/*"],
            "css@/*": ["src/main/css/*"]
        },
        "sourceMap": true,
        "types": [
            "node", "webpack"
        ],
        "traceResolution": true
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "dist"
    ],
    "include": [
        "src/**/*"
    ],
    "typeAcquisition": {
        "include": ["node", "webpack"]
    }
}
