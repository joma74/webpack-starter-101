{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "checkJs": true,
        "moduleResolution": "node",
        "strict": true,
        "rootDirs": [
            "build-utils", "src/main"
        ],
        "baseUrl": "./",
        "outDir": "./target/",
        "paths": {
            "jsm@/*": ["./src/main/js/*"],
            "jstu@/*": ["./src/test/unit/js/*"],
            "css@/*": ["./src/main/css/*"],
            "~/*" : ["./src/main/*"]
        },
        "sourceMap": true,
        "types": [
            "node", "webpack", "debug", "jasmine", "karma"
        ],
        "traceResolution": true
    },
    "exclude": [
        "dist",
        "node_modules",
        "**/node_modules/*",
        "target"
    ],
    "include": [
        "src/**/*"
    ],
    "typeAcquisition": {
        "include": ["node", "webpack", "debug", "jasmine", "karma"]
    }
}
